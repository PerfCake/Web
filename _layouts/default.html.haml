                %img{:src => "#{site.base_url}/images/jprofiler_medium.png", :title => 'Java Profiler', :alt => "Java Profiler"}
                &nbsp;
              %a{:href => 'http://www.oxygenxml.com', :target => '_blank', :style => 'text-decoration: none'}
                %img{:src => "#{site.base_url}/images/oxygen190x62.png", :alt => "Oxygen XML Editor", :title => 'Oxygen XML Editor'}
