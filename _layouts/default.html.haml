!!!5
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %title #{site.title}
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %meta{:content => "A Lightweight Performance Testing Framework PerfCake", :name => "description"}/
    %meta{:content => "Apache License 2.0 - Copyright since 2010 by the original author or authors", :name => "copyright"}/
    /[if lt IE 9]
      %script{:src => 'https://html5shim.googlecode.com/svn/trunk/html5.js'}
    %link{:href => "#{site.base_url}/stylesheets/bootstrap.min.css", :rel => "stylesheet", :type=>'text/css'}/
    %link{:href => "#{site.base_url}/stylesheets/bootstrap-responsive.min.css", :rel => "stylesheet", :type=>'text/css'}/
    %link{:href => "#{site.base_url}/stylesheets/custom.css", :rel => "stylesheet", :type=>'text/css'}/
    %link{:href => "#{site.base_url}/stylesheets/font-awesome.min.css", :rel => "stylesheet", :type=>'text/css'}/
    %link{:href => "#{site.base_url}/stylesheets/syntax-hl.css", :rel => "stylesheet", :type=>'text/css'}/
    %link{:href => "#{site.base_url}/stylesheets/flipclock.min.css", :rel => "stylesheet", :type=>'text/css'}/
    %link{:href => "#{site.base_url}/images/logo-revert.svg", :rel => "shortcut icon"}/
    %link{:href => "#{site.base_url}/images/logo-revert.svg", :rel => "icon"}/
    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
