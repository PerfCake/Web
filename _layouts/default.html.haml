      ga('create', 'UA-42279823-1', 'perfcake.org');
      ga('send', 'pageview');
  %body#home
    /
      Navbar
      \==================================================
    .navbar.navbar-default.navbar-fixed-top
      .container
        .navbar-header
          %a.navbar-brand{:href => "#{site.base_url}/"} PerfCake
          %button.navbar-toggle{"type" => "button", "data-target" => "#navbar-main", "data-toggle" => "collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
        .navbar-collapse.collapse#navbar-main
          %ul.nav.navbar-nav
            %li
              %a{:href => "#{site.base_url}/community", :rel => "tooltip", :title => "Learn about the community, how to contribute, etc." } Community
            %li
              %a{:href => "#{site.base_url}/quickstart", :rel => "tooltip", :title => "Run your first benchmark in 5 minutes" } Get started!
            %li.dropdown
              %a.dropdown-toggle#guides{"data-toggle" => "dropdown", :href => "#"}
                Documentation
                %span.caret
              %ul.dropdown-menu{"aria-labelledby" => "guides"}
                %li
                  %a{:href => "#{site.base_url}/guide/user"} Users' guide
                %li
                  %a{:href => "#{site.base_url}/guide/devel"} Developers' guide
            %li
              %a{:href => "#{site.base_url}/download", :rel => "tooltip", :title => "Download binary distributions or source code" } Download
            %li
              %form.navbar-search.pull-left{:action => "https://www.google.com/search", :target => "_blank"}
                %input{:type => "hidden", :name => "sitesearch", :value => "perfcake.org"}
                %input.search-query{:name => "q", :placeholder => "Search", :type => "text"}/
          %ul.nav.navbar-nav.navbar-right
            %li
              %a{:href => "#{site.base_url}/support", :rel => "tooltip", :title => "Get some help improving performance of your applications"}
                %strong Get support!
                %i.fa.fa-share

    %div.container
      ~ content

      /
        Footer
        \==================================================
      %hr/
      %footer
        .row
          .col-lg-12
            %ul.list-unstyled
              %li.pull-right
                %a{:href => "#top"} Back to top
              %li
                %i.fa.fa-quote-left
                  %a{:href => "http://perfcake.blogspot.com", :target => "_blank"} Blog
              %li
                %i.fa.fa-rss
                  %a{:href => "http://perfcake.blogspot.com/feeds/posts/default", :target => "_blank"} Atom
              %li
                %i.fa.fa-twitter
                  %a{:href => "https://twitter.com/perfcaketool", :target => "_blank"} Twitter
              %li
                %i.fa.fa-github
                  %a{:href => "https://github.com/PerfCake", :target => "_blank"} GitHub
              %li
                %i.fa.fa-slack
                  %a{:href => "https://perfcake.slack.com/", :target => "_blank"} Slack
              %li
                %i.fa.fa-google-plus
                  %a{:href => "https://groups.google.com/forum/#!forum/perfcake", :target => "_blank"} Google Group
              %li
